@model PiesListViewModel

@ViewBag.CurrentCategory
@foreach (var pie in Model.Pies)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@pie.ImageThumbnailUrl" alt="">
            <div class="caption">
                <h3 class="pull-right">@pie.Price.ToString("c")</h3>
                <h3>
                    <a>@pie.Name</a>
                </h3>
                <p>@pie.ShortDescription</p>
            <h4>
    @{
        if (pie.InStock)
        {
            <span style="color: green;" class="pull-left">In Stock</span>
        }
        else
        {
            <span style="color: red;" class="pull-left">Out of Stock</span>
        }
    }
            </h4>
            </div>
        </div>
    </div>
}
